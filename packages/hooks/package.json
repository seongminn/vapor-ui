{
    "name": "@vapor-ui/hooks",
    "version": "1.0.0",
    "description": "A collection of React hooks for the Vapor Design System.",
    "keywords": [
        "react",
        "hooks",
        "custom-hooks",
        "vapor-ui"
    ],
    "homepage": "https://github.com/goorm-dev/vapor-ui",
    "bugs": {
        "url": "https://github.com/goorm-dev/vapor-ui/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/goorm-dev/vapor-ui.git",
        "directory": "packages/hooks"
    },
    "license": "MIT",
    "author": "Vapor Team <vapor.ui@goorm.io>",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/types/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rimraf dist .turbo node_modules",
        "format": "prettier --write \"./src/**/*.{ts,tsx,md}\"",
        "format:check": "prettier --check \"./src/**/*.{ts,tsx,md}\"",
        "lint": "eslint ./src",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/react": "^18.3.24",
        "eslint": "^9.1.0",
        "react": "^18.3.1",
        "tsup": "^8.4.0",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
